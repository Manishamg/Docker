pipeline{
    agent any
    environment {
        DOCKERHUB_USERNAME = "manisha265"
        DOCKERHUB_PASSWORD = "Mmani@265"}
    stages{
        stage ("httpd image pull"){
            steps{
            sh 'docker run -d --name imageapache1 httpd'
            }
        }
        stage ('docker images'){
            steps{
                sh 'docker images'
            }
        }
        stage('Pushing image to Docker-Hub') {
            steps {
                script {
                    sh "docker login -u ${DOCKERHUB_USERNAME} -p ${DOCKERHUB_PASSWORD} "
                    sh "docker push imageapache1"
                }
            }

    }}
post{
    always{
     sh 'docker rm -f imageapache1'
}}
}
